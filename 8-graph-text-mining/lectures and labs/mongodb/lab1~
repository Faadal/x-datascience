db.profiles.find({name:{$eq:'John'}},{favorites:1, _id:0})

db.profiles.aggregate([{$project:
	{'age':
		{$divide:[
			{$substract:[new Date(),'$dob']},31558464000]},
		},
	'name':1}},
	{$match:{age:{$gt:30}}},
	{$group:{_id:'1',count:{$sum:1}}}
])

